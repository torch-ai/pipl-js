{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "noImplicitAny": true,
        "outDir": "./dist",
        "target": "es5",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.*"
    ]
}
